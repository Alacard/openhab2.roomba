<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="irobot"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
	<thing-type id="roomba">
		<label>Roomba</label>
		<description>A Roomba vacuum robot</description>

		<channels>
			<channel id="dock" typeId="dock" />
			<channel id="spot" typeId="spot" />
			<channel id="clean" typeId="clean" />
		</channels>
		<config-description>
			<parameter name="ipaddress" type="text">
				<label>IP Address</label>
				<description>IP Address of your Roomba</description>
				<default></default>
			</parameter>
            <parameter name="password" type="text">
                <label>Password</label>
                <default></default>
            </parameter>
			
		</config-description>
	</thing-type>
	
	<channel-type id="dock">
        <item-type>Switch</item-type>
        <label>Dock</label>
        <description>Let robot return to dock</description>
        <category>PowerOutlet</category>
		<state readOnly="false"/>
    </channel-type>

	<channel-type id="spot">
        <item-type>Switch</item-type>
        <label>Spot</label>
        <description>Start spot cleaning mode</description>
        <category>PowerOutlet</category>
		<state readOnly="false"/>
    </channel-type>
    
    <channel-type id="clean">
        <item-type>Switch</item-type>
        <label>Clean</label>
        <description>Start regular cleaning</description>
        <category>PowerOutlet</category>
		<state readOnly="false"/>
    </channel-type>

</thing:thing-descriptions>